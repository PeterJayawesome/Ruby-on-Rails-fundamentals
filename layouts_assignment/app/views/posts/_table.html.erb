<h1>All Posts</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th>Author</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post|%>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.content %></td>
				<td><%= post.author %></td>
			</tr>
		<%end%>
	</tbody>
</table>