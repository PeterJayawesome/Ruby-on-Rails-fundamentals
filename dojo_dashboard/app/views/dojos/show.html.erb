<!DOCTYPE html>
<html>
<head>
	<title>Show Dojo</title>
</head>
<body>
	<p>Branch: <%= @dojo.branch %></p>
	<p>Street: <%= @dojo.street %></p>
	<p>City: <%= @dojo.city %></p>
	<p>State: <%= @dojo.state %></p>
	<h4>Student Roster</h4>
	<table>
		<tr>
			<th><p>First Name</p></th>
			<th><p>Last Name</p></th>
			<th><p>Email</p></th>
			<th><p>Actions</p></th>
		</tr>
		<% @students.each do |student| %>
		<tr>
			<td><p><%= student.first_name %></p></td>
			<td><p><%= student.last_name %></p></td>
			<td><p><%= student.email %></p></td>
			<td>
				<nav>
					<a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>">Show</a>
					<a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit">Edit</a>
					<a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>" data-method="delete">Delete</a>
				</nav>
			</td>
		</tr>
		<% end %>
	</table>
	<a href="/dojos">Go Back</a>
	<a href="/dojos/<%=@dojo.id%>/students/new">Add Student</a>
</body>
</html>