<!DOCTYPE html>
<html>
<head>
	<title>Edit Student</title>
</head>
<body>
	<h2>Editing <%=@student.first_name%> <%=@student.last_name%></h2>
	<form action="/dojos/<%=@dojo.id%>/students/<%=@student.id%>" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<input type="hidden" name="_method" value="patch">
		<label>First Name:</label>
		<input type="text" name="student[first_name]" value="<%=@student.first_name%>"><br>
		<label>Last Name:</label>
		<input type="text" name="student[last_name]" value="<%=@student.last_name%>"><br>
		<label>Email:</label>
		<input type="text" name="student[email]" value="<%=@student.email%>"><br>
		<label>Dojo:</label>
		<select name="student[dojo_id]">
			<%@dojos.each do |dojo|%>
			<option value="<%=dojo.id%>" <%if dojo.id == @dojo.id%>selected="selected"<%end%>><%=dojo.branch%></option>
			<%end%>
		</select><br>
		<input type="submit" value="Update">
	</form>
	<nav>
		<a href="/dojos">Home</a>
		<a href="/dojos/<%=@dojo.id%>/students/<%=@student.id%>"><%=@student.first_name%></a>
	</nav>
</body>
</html>